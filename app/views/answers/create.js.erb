<% if	 @answer.persisted?  %>
  $('.answers-list').append('<%= j render @answer %>');
  $('.flash').html('<%= j render 'shared/flash' %>');
  $('#new_answer #answer_body').val('');
  $('.new-answer-errors').empty();
<% else %>
  $('.new-answer-errors').html('<%= j render 'shared/short_errors', resource: @answer%>');
<% end %>