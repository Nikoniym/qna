<% if	 @answer.persisted?  %>
  $('.answers').append('<%= j render @answer %>');
  $('.flash').html('<%= j render 'shared/flash' %>');
  $('#answer_body').val('');
  $('.resource-errors').remove();
<% else %>
  $('.resource-errors').remove();
  $('#new_answer').prepend('<%= j render 'shared/errors', resource: @answer%>');
<% end %>