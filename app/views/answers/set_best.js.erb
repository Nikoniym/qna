<% if	current_user.author_of?(@answer.question)  %>
  $(".answer-<%=@answer.id %>").remove();
  $('.answers-list').prepend('<%= j render @answer %>');

  $('.best-link-wrapper').show();
  $('.answer-item:first-child .best-link-wrapper').hide();

  $('.flash').html('<%= j render 'shared/flash' %>');

<% else %>
  $('.flash').html('<%= j render 'shared/flash' %>');
<% end %>